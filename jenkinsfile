pipeline {
    agent {
        node {
            label "linux"
        }
    }

    stages {

        stage ("Build") {
            steps {
                echo "Hello Build"
            }
        }

        stage ("Test") {
            steps {
                echo "Hello Test"
                echo "Hello Test-2"
                sh "echo 'Running test script...'"
            }
        }

        stage ("Deploy") {
            steps {
                echo "Hello Deploy"
            }
        }
    }

    post {
        always {
            echo "I will always say Hello again!"
        }
        success {
            echo "Build finished successfully!"
        }
        failure {
            echo "Build failed!"
        }
    }
}
